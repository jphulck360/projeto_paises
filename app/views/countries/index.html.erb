<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table>
  <thead>
    <tr>
      <th>Localizacao</th>
      <th>Capital</th>
      <th>Extensao</th>
      <th>Idioma</th>
      <th>Populacao</th>
      <th>Pib</th>
      <th>Moeda</th>
      <th>Ano referencia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.localizacao %></td>
        <td><%= country.capital %></td>
        <td><%= country.extensao %></td>
        <td><%= country.idioma %></td>
        <td><%= country.populacao %></td>
        <td><%= country.pib %></td>
        <td><%= country.moeda %></td>
        <td><%= country.ano_referencia %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

