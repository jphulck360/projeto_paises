<p id="notice"><%= notice %></p>

<div id="titulo" class="animated pulse">
  Lista de Países
</div>

<div id="container">
  <table class="table table-condensed" align="center" width="80%">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Capital</th>
        <th>Bandeira</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @countries.each do |country| %>
        <tr>
          <td><%= country.id %></td>
          <td><%= country.nome %></td>
          <td><%= country.capital %></td>
          <td><%= image_tag country.imagem.url, size:"100x60" %></td>
          <td><%= link_to 'Show', country %></td>
          <!-- <td><%# link_to 'Edit', edit_country_path(country) %></td> -->
          <!-- <td><%# link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

